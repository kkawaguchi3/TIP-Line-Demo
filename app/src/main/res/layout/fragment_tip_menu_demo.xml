<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@android:color/background_light"
    android:fillViewport="false">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/long_logo"
        android:id="@+id/imageView3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.15">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"
            android:gravity="center_horizontal|top">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|top"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="224dp"
                    android:weightSum="1"
                    android:layout_weight="0.88">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <Button
                            android:text="Emergency Tip Call"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonTipCall"
                            android:layout_weight="0.12"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/phone"
                            android:layout_marginTop="50dp"
                            android:textColor="@color/aalightblue" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <Button
                            android:text="Text Tip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonTipText"
                            android:layout_weight="0.30"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/text"
                            android:layout_marginTop="50dp"
                            android:textColor="@color/aalightblue" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="244dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <Button
                            android:text="Audio Tip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonTipVoice"
                            android:layout_weight="0.23"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/audio"
                            android:textColor="@color/aalightblue"
                            android:layout_marginTop="40dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <Button
                            android:text="Photo/Video Tip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/buttonTipCamera"
                            android:layout_weight="0.22"
                            android:background="@android:color/transparent"
                            android:drawableTop="@drawable/camera"
                            android:textColor="@color/aalightblue"
                            android:layout_marginTop="40dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.15">
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>